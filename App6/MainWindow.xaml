<?xml version="1.0" encoding="utf-8" ?>

<Window
    x:Class="App6.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App6"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Toolbox"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <NavigationView
        AlwaysShowHeader="True"
        Background="Transparent"
        ExpandedModeThresholdWidth="500"
        Header="Toolbox v6.1b1"
        IsBackButtonVisible="Auto"
        IsBackEnabled="False"
        IsSettingsVisible="True"
        IsTabStop="False"
        Loaded="viewloaded"
        PaneDisplayMode="Auto"
        SelectionFollowsFocus="Disabled">

        <NavigationView.MenuItems>
            <NavigationViewItem
                x:Name="SamplePage1Item"
                Content="Default"
                Tag="SamplePage1">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Play" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItemHeader Content="Actions" />
            <NavigationViewItem
                x:Name="SamplePage2Item"
                Content="Save Offsets"
                SelectsOnInvoked="True"
                Tag="SamplePage2">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Save" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem
                x:Name="SamplePage3Item"
                Content="Search Offsets"
                Tag="SamplePage3">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Refresh" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.PaneCustomContent>
            <HyperlinkButton
                x:Name="PaneHyperlink"
                Margin="12,0"
                Content="More info"
                Visibility="Collapsed" />
        </NavigationView.PaneCustomContent>

        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox AutomationProperties.Name="Search" QueryIcon="Find" />
        </NavigationView.AutoSuggestBox>

        <NavigationView.PaneFooter>
            <StackPanel
                x:Name="FooterStackPanel"
                Orientation="Vertical"
                Visibility="Collapsed">
                <NavigationViewItem AutomationProperties.Name="download" Icon="Download" />
                <NavigationViewItem AutomationProperties.Name="favorite" Icon="Favorite" />
            </StackPanel>
        </NavigationView.PaneFooter>

        <StackPanel
            Padding="12"
            Orientation="Vertical"
            Spacing="15">
            <Button
                Margin="0,20,0,0"
                Click="Button_Click_Game"
                Content="Game Start"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                Click="Button_Click"
                Content="Kill Process"
                Style="{StaticResource SubtleButtonStyle}" />
            <TextBox
                x:Name="Path"
                Margin="20,20,0,0"
                Header="Genshin Impact Game Path:"
                PlaceholderText="eg: C:\\Genshin Impact\\YuanShen.exe" />
            <Grid Padding="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ToggleSwitch
                    x:Name="TargetFovHotSwitch_Toggle"
                    Grid.Row="0"
                    Grid.Column="0"
                    Header="TargetFovHotSwitch"
                    IsOn="False"
                    Toggled="TargetFovHotSwitch" />

                <NumberBox
                    x:Name="TargetFov_NumberBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,100,0"
                    Padding="10,8,6,6"
                    Header="TargetFov"
                    IsEnabled="True"
                    LargeChange="10"
                    Maximum="100"
                    Minimum="1"
                    SmallChange="1"
                    SpinButtonPlacementMode="Inline"
                    ValueChanged="TargetFov"
                    Value="45" />
                <ToggleSwitch
                    x:Name="DisableFog_Toggle"
                    Grid.Row="0"
                    Grid.Column="2"
                    Header="DisableFog"
                    IsOn="False"
                    Toggled="DisableFog" />

                <ToggleSwitch
                    x:Name="TargetFpsToggleSwitch_Toggle"
                    Grid.Row="1"
                    Grid.Column="0"
                    Header="TargetFpsToggleSwitch"
                    IsOn="False"
                    Toggled="TargetFpsToggleSwitch" />

                <NumberBox
                    x:Name="TargetFps_NumberBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,100,0"
                    Padding="10,8,6,6"
                    Header="TargetFps"
                    IsEnabled="True"
                    Maximum="120"
                    Minimum="1"
                    SpinButtonPlacementMode="Inline"
                    ValueChanged="TargetFps"
                    Value="120" />
                <ToggleSwitch
                    x:Name="FixLowFovSceneToggleSwitch_Toggle"
                    Grid.Row="1"
                    Grid.Column="2"
                    Header="FixLowFovSceneToggleSwitch"
                    IsOn="False"
                    Toggled="FixLowFovSceneToggleSwitch" />

                <ToggleSwitch
                    x:Name="HideQuestBanner_Toggle"
                    Grid.Row="2"
                    Grid.Column="0"
                    Header="HideQuestBanner"
                    IsOn="False"
                    Toggled="HideQuestBanner" />

                <ToggleSwitch
                    x:Name="RemoveOpenTeamProgress_Toggle"
                    Grid.Row="2"
                    Grid.Column="1"
                    Header="RemoveOpenTeamProgress"
                    IsOn="False"
                    Toggled="RemoveOpenTeamProgress" />
                <ToggleSwitch
                    x:Name="EventCameraMoveHotSwitch_Toggle"
                    Grid.Row="2"
                    Grid.Column="2"
                    Header="EventCameraMoveHotSwitch"
                    IsOn="False"
                    Toggled="EventCameraMoveHotSwitch" />

                <ToggleSwitch
                    x:Name="DisableShowDamageText_Toggle"
                    Grid.Row="3"
                    Grid.Column="0"
                    Header="DisableShowDamageText"
                    IsOn="False"
                    Toggled="DisableShowDamageText" />
                <ToggleSwitch
                    x:Name="RedirectCombineEntryToggleSwitch_Toggle"
                    Grid.Row="3"
                    Grid.Column="1"
                    Header="RedirectCombineEntryToggleSwitch"
                    IsOn="False"
                    Toggled="RedirectCombineEntryToggleSwitch" />

                <ToggleSwitch
                    x:Name="UsingTouchScreen_Toggle"
                    Grid.Row="3"
                    Grid.Column="2"
                    Header="UsingTouchScreen"
                    IsEnabled="True"
                    IsOn="False"
                    Toggled="UsingTouchScreen" />

                <ToggleSwitch
                    x:Name="ResinListItemAllowOriginalResin_Toggle"
                    Grid.Row="4"
                    Grid.Column="0"
                    Header="ResinListItemAllowOriginalResin"
                    IsOn="True"
                    Toggled="ResinListItemAllowOriginalResin" />
                <ToggleSwitch
                    x:Name="ResinListItemAllowPrimogem_Toggle"
                    Grid.Row="4"
                    Grid.Column="1"
                    Header="ResinListItemAllowPrimogem"
                    IsOn="True"
                    Toggled="ResinListItemAllowPrimogem" />
                <ToggleSwitch
                    x:Name="ResinListItemAllowFragileResin_Toggle"
                    Grid.Row="4"
                    Grid.Column="2"
                    Header="ResinListItemAllowFragileResin"
                    IsOn="True"
                    Toggled="ResinListItemAllowFragileResin" />

                <ToggleSwitch
                    x:Name="ResinListItemAllowTransientResin_Toggle"
                    Grid.Row="5"
                    Grid.Column="0"
                    Header="ResinListItemAllowTransientResin"
                    IsOn="True"
                    Toggled="ResinListItemAllowTransientResin" />
                <ToggleSwitch
                    x:Name="ResinListItemAllowCondensedResin_Toggle"
                    Grid.Row="5"
                    Grid.Column="1"
                    Header="ResinListItemAllowCondensedResin"
                    IsOn="True"
                    Toggled="ResinListItemAllowCondensedResin" />
            </Grid>
        </StackPanel>

    </NavigationView>

</Window>
