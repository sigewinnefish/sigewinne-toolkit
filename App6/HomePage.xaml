<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="App6.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App6"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="30,20"
            Padding="12"
            Orientation="Vertical"
            Spacing="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button
                    x:Uid="ViewPageHomeLaunch"
                    Click="Button_Click_Game"
                    Style="{StaticResource AccentButtonStyle}" />
                <Button
                    x:Uid="ViewPageHomeKillProcess"
                    Click="Button_KillProcess_Click"
                    Style="{StaticResource SubtleButtonStyle}" />
            </StackPanel>

            <SelectorBar x:Name="SelectorBar2" SelectionChanged="SelectorBar2_SelectionChanged">
                <SelectorBarItem
                    x:Name="SelectorBarItemPage1"
                    x:Uid="ViewPageHomeGameOptions"
                    IsSelected="True" />
                <SelectorBarItem
                    x:Name="SelectorBarItemPage2"
                    x:Uid="ViewPageHomeInjectionOptions"
                    Margin="20,0" />
            </SelectorBar>



        </StackPanel>
        <Frame x:Name="contentFrame" Grid.Row="1" />
    </Grid>
</Page>
