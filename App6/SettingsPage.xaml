<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="App6.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:App6"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App6"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:essential="using:WinUI3Package"
    mc:Ignorable="d">

    <Border Padding="20">
        <ScrollViewer>
            <StackPanel Margin="30,0,30,0" Spacing="3">

                <essential:SettingsCard x:Uid="ViewPageSettingsStealthMode">
                    <ToggleSwitch
                        MinWidth="10"
                        IsOn="{x:Bind StealthMode, Mode=TwoWay}"
                        Style="{ThemeResource RightAlignedCompactToggleSwitchStyle}" />
                    <essential:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xED1A;" />
                    </essential:SettingsCard.HeaderIcon>
                </essential:SettingsCard>

                <essential:SettingsCard x:Uid="ViewPageSettingsRestrictedTokens">
                    <ToggleSwitch
                        MinWidth="10"
                        IsOn="{x:Bind RestrictedTokens, Mode=TwoWay}"
                        Style="{ThemeResource RightAlignedCompactToggleSwitchStyle}" />
                    <essential:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF0EF;" />
                    </essential:SettingsCard.HeaderIcon>
                </essential:SettingsCard>

                <essential:SettingsCard x:Uid="ViewPageSettingsLanguageOverride">

                    <StackPanel Orientation="Horizontal" Spacing="160">
                        <ComboBox
                            x:Name="LangCombo"
                            Width="200"
                            PlaceholderText="Pick a color"
                            SelectionChanged="LangCombo_SelectionChanged">
                            <x:String>Default</x:String>
                            <x:String>zh-cn</x:String>

                        </ComboBox>
                        <ToggleSwitch
                            MinWidth="10"
                            IsOn="{x:Bind LangOverride, Mode=TwoWay}"
                            Style="{ThemeResource RightAlignedCompactToggleSwitchStyle}" />
                    </StackPanel>

                    <essential:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF2B7;" />
                    </essential:SettingsCard.HeaderIcon>
                </essential:SettingsCard>
            </StackPanel>

        </ScrollViewer>
    </Border>
</Page>
